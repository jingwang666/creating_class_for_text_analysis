class analysedText(object):
    
    def __init__ (self, text):
        self.text = text.lower()
        for punc in ['.', '!', ',', '?']:
            self.text = self.text.replace(punc, '')
        self.fmtText = self.text
        self.list_words = self.fmtText.split()
    
    def freqAll(self):        
        dic = {}
        
#         list_words = self.fmtText.split()
#         for word in set(list_words):
#             dic[word] = list_words.count(word)

        for word in set(self.list_words):
            dic[word] = self.list_words.count(word)

        return dic
        
        
    def freqOf(self,word):
        
#         dic = {}
#         list_words = self.fmtText.split()
#         for word2 in set(list_words):
#             dic[word2] = list_words.count(word2)
# #         print(dic)
#         freq = dic[word]
#         return freq

#         freq = self.fmtText.split().count(word)

        freq = self.list_words.count(word)
#       add a comment version 2 - test    
        return freq
        
            
